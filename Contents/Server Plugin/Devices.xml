<Devices>
    <Device type="sensor" id="netatmoIndoorModule">
        <Name>Netatmo Weather Station: Indoor Module</Name>
        <ConfigUI>
            <Field id="stationName" type="textfield">
                <Label>Netatmo Station Name:</Label>
            </Field>
            <Field id="moduleName" type="textfield">
                <Label>Module Name</Label>
                <Description>(As registered with Netatmo.com)</Description>
            </Field>
            <Field id="foo2" type="label">
                <Label>(As registered with Netatmo.com)</Label>
            </Field>
            <Field type="checkbox" id="SupportsSensorValue"  hidden="true" defaultValue="true"/>
            <Field type="checkbox" id="SupportsOnState"  hidden="true" defaultValue="false"/>
        </ConfigUI>

        <States>
            <State id="Temperature">
