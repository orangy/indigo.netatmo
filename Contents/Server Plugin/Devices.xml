            </State>
            <State id="Co2">
                <ValueType>Float</ValueType>
                <TriggerLabel>CO2</TriggerLabel>
                <ControlPageLabel>CO2</ControlPageLabel>
            </State>
            <State id="Noise">
                <ValueType>Float</ValueType>
                <TriggerLabel>Noise</TriggerLabel>
                <ControlPageLabel>Noise</ControlPageLabel>
            </State>
            <State id="WiFi_Signal">
                <ValueType>Float</ValueType>
                <TriggerLabel>WiFi_Signal</TriggerLabel>
                <ControlPageLabel>WiFi_Signal</ControlPageLabel>
            </State>
            <State id="Observation_Time">
                <ValueType>Integer</ValueType>
                <TriggerLabel>Last Read</TriggerLabel>
                <ControlPageLabel>Last Read</ControlPageLabel>
            </State>
        </States>
        <UiDisplayStateId>sensorValue</UiDisplayStateId>
    </Device>


